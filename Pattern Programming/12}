void numberCrown(int n) {
    // Write your code here.
      int i , j , d ;
    for(i=1 ; i <=n ; i++)
    {
        for (j=1 ; j <= i ; j++)
        {
            cout << j << " ";
        }
        for (j=i+1 ; j <=n ; j++)
        {
            cout << "  ";
        }
        for (j=i ; j < n ; j++)
        {
            cout << "  ";
        }
        d =i;
        for (j=1 ; j <= i ; j++)
        {
            cout << d << " ";
            d--;
        }
        cout << "\n";
    }

}
